<body>
  <div class="login-container">
    <div class="login-message">Faça o login</div>
    <input type="text" id="palavra" placeholder="Digite o login" />
    <input type="password" id="senha" placeholder="Digite sua senha" />
    <button onclick="verificarPalavra()">Verificar informações</button>
    <p id="mensagem"></p>
  </div>

  <script>
    function verificarPalavra() {
      const palavras = [
        { login: "Thiago18", senha: "345" },
        { login: "Rick11", senha: "GT23" },
      ];
      const input = document.getElementById("palavra").value;
      const incorreta = document.getElementById("senha").value;
      const mensagem = document.getElementById("mensagem");
      let encontrado = false;

      for (let i = 0; i < palavras.length; i++) {
        if (input == palavras[i].login && incorreta == palavras[i].senha) {
          encontrado = true;
          mensagem.innerHTML = "login encontrado";
          mensagem.className = "success";
          setTimeout(() => {
            window.location.href = "segunda.html";
            mensagem.innerHTML = "Será que você está cadastrado?";
            mensagem.className = "";
          }, 3000);
          break;
        }
      }
      if (!encontrado) {
        mensagem.innerHTML = "login não encontrado";
        mensagem.className = "error";
        setTimeout(() => {
          document.getElementById("palavra").value = "";
          document.getElementById("senha").value = "";
          mensagem.innerHTML = "";
          mensagem.className = "";
        }, 2000);
      }
    }
  </script>
