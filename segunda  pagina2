<script defer>
    async function carregarCurso(curso){

        try {
            document.getElementById("detalhes").innerHTML= "Carregando informações do tópico...";

            await new Promise(destaca=>setTimeout(destaca,3000));

            let mensagens={
                "Confeitaria":"O curso Confeitaria abrange técnicas de manipulação correta de ingrediente e utensílios,a preparação de bases de doces(massas,cremes e caldas),técnicas específicas como temperagem de chocolate e decoração,e aplicação de boas práticas de higiene e segurança alimentar",
                "Segurança Alimentar":"O curso De Segurança Alimentar abrange técnicas profissionais das boas práticas de manipulação de alimentos para garantir a higiene e segurança dos produtos de confeitaria.",
                "Cocção e Cortes":"O curso de Cocção e Cortes abrange técnicas fundamentais para a criação de doces e pratos,tais como: métodos de (cozimento) -aplicação de calor aos alimentos;cortes,técnicas para preparos de massas,frutas e carnes; e a manipulação de massas, recheios e coberturas,com foco nas bases da confeitaria e higiene alimentar."
            };
            document.getElementById("detalhes").innerHTML = mensagens[curso];
        } catch (erro) {
        document.getElementById("detalhes").innerHTML="Erro: " + erro.message;
        console.error("Erro capturado:",erro);
}
}
</script>
